# Get External IP / local IPs
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Quickly serve the current directory as HTTP
alias s="foreman start -f Procfile.dev"

# Shortcut to folders
alias sk="cd ~/code/skello/skello"

# Opening shit in atom like it's stt
alias att="atom ."
# Opening shit in VC insiders like it's stt
alias vc="code-insiders ."

# Others
alias wip="SKIP=ALL git commit -m 'wip'"
alias py="source activate skello_python"
